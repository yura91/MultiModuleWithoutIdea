<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition"
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@id/expanded">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/shortHistoryPaymentList"
            app:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/easyFlipView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="@dimen/margin_40" />

        <Constraint
            android:id="@+id/paymentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/margin_35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/easyFlipView" />

        <Constraint
            android:id="@id/shortHistoryPaymentList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentsLayout" />

        <Constraint
            android:id="@id/shimmer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/shortHistoryPaymentList" />
        <Constraint
            android:id="@id/shimmer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer1" />
        <Constraint
            android:id="@id/shimmer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer2" />

        <Constraint
            android:id="@id/shimmer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer3" />

        <Constraint
            android:id="@id/shimmer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer4" />

        <Constraint
            android:id="@id/shimmer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/easyFlipView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-300dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/paymentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/easyFlipView" />

        <Constraint
            android:id="@id/shortHistoryPaymentList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentsLayout" />
        <Constraint
            android:id="@id/shimmer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/shortHistoryPaymentList" />

        <Constraint
            android:id="@id/shimmer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer1" />
        <Constraint
            android:id="@id/shimmer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer2" />

        <Constraint
            android:id="@id/shimmer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer3" />

        <Constraint
            android:id="@id/shimmer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer4" />

        <Constraint
            android:id="@id/shimmer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_35"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/shimmer5" />
    </ConstraintSet>

</MotionScene>
