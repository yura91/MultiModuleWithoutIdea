<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItemRestrictedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_20"
    android:layout_marginEnd="@dimen/margin_20">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfoFront"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_bg"
        app:cardCornerRadius="@dimen/size_30">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:background="@drawable/tint_background" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_26"
            android:layout_marginTop="@dimen/margin_24"
            android:src="@drawable/ic_visa" />

        <ImageView
            android:layout_width="@dimen/size_52"
            android:layout_height="@dimen/size_68"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_118"
            android:layout_marginEnd="@dimen/margin_80"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_card_chip" />

        <TextView
            android:id="@+id/cardBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_26"
            android:layout_marginBottom="78dp"
            tools:text="@string/card_balance"
            android:textColor="@color/white"
            android:textSize="@dimen/text_46" />

        <TextView
            android:id="@+id/cardNumLastDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/margin_34"
            android:layout_marginBottom="@dimen/margin_34"
            android:text="@string/card_num_holder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/expDateFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin_34"
            android:layout_marginBottom="@dimen/margin_34"
            android:text="@string/card_exp_date"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/frontSideShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_16"
                    android:layout_marginStart="@dimen/margin_34"
                    android:layout_marginBottom="@dimen/margin_34"
                    android:background="@android:color/darker_gray" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_16"
                    android:layout_marginEnd="@dimen/margin_34"
                    android:layout_marginBottom="@dimen/margin_34"
                    android:background="@android:color/darker_gray"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>