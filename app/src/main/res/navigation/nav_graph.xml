<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.multimoduleapp.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_getAcquaintedFragment"
            app:destination="@id/getAcquaintedFragment" />
    </fragment>
    <fragment
        android:id="@+id/getAcquaintedFragment"
        android:name="com.example.multimoduleapp.GetAcquaintedFragment"
        android:label="fragment_get_acquainted"
        tools:layout="@layout/fragment_get_acquainted">
        <action
            android:id="@+id/action_getAcquaintedFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/action_getAcquaintedFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.multimoduleapp.LocationFragment"
        android:label="LocationFragment">
        <action
            android:id="@+id/action_locationFragment_to_cardPaletteFragment"
            app:destination="@id/cardPaletteFragment" />
        <action
            android:id="@+id/action_locationFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardPaletteFragment"
        android:name="com.example.multimoduleapp.CardPaletteFragment"
        android:label="CardPaletteFragment">
        <action
            android:id="@+id/action_cardPaletteFragment_to_cardIsReadyFragment"
            app:destination="@id/cardIsReadyFragment" />
        <action
            android:id="@+id/action_cardPaletteFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardIsReadyFragment"
        android:name="com.example.multimoduleapp.CardIsReadyFragment"
        android:label="CardIsReadyFragment">
        <action
            android:id="@+id/action_cardIsReadyFragment_to_completeAuthFragment"
            app:destination="@id/completeAuthFragment" />
        <action
            android:id="@+id/action_cardIsReadyFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/completeAuthFragment"
        android:name="com.example.multimoduleapp.CompleteAuthFragment"
        android:label="fragment_complete_auth"
        tools:layout="@layout/fragment_complete_auth">
        <action
            android:id="@+id/action_completeAuthFragment_to_topUpFragment"
            app:destination="@id/topUpFragment" />
        <action
            android:id="@+id/action_completeAuthFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_completeAuthFragment_to_historyPaymentsFragment"
            app:destination="@id/historyPaymentsFragment" />
        <action
            android:id="@+id/action_completeAuthFragment_to_fullCardInfoFragment"
            app:destination="@id/fullCardInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/topUpFragment"
        android:name="com.example.multimoduleapp.TopUpFragment"
        android:label="fragment_top_up"
        tools:layout="@layout/fragment_top_up" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.multimoduleapp.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_helpSupportFragment"
            app:destination="@id/helpSupportFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_legalInformationFragment"
            app:destination="@id/legalInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/helpSupportFragment"
        android:name="com.example.multimoduleapp.HelpSupportFragment"
        android:label="HelpSupportFragment" />
    <fragment
        android:id="@+id/legalInformationFragment"
        android:name="com.example.multimoduleapp.LegalInformationFragment"
        android:label="LegalInformationFragment" />
    <fragment
        android:id="@+id/historyPaymentsFragment"
        android:name="com.example.multimoduleapp.HistoryPaymentsFragment"
        android:label="fragment_history_payments"
        tools:layout="@layout/fragment_history_payments" />
    <fragment
        android:id="@+id/fullCardInfoFragment"
        android:name="com.example.multimoduleapp.FullCardInfoFragment"
        android:label="FullCardInfoFragment" />
</navigation>